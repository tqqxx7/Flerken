<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <include layout="@layout/payment_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_2"
        android:layout_gravity="center"
        android:padding="22dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:tint="#d22532"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_plusone_medium_off_client"/>

        <com.example.admin.flerken.customfonts.EditText_Roboto_Regular
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Thêm tiêu đề"
            android:layout_gravity="center"
            android:textSize="14.4sp"
            android:layout_marginLeft="15dp"
            android:textColorHint="#9b9b9b"
            android:textColor="#000000"
            android:background="#00000000"/>

        <!--<ImageView-->
            <!--android:layout_width="22dp"-->
            <!--android:layout_height="22dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginRight="5.7dp"-->
            <!--android:src="@drawable/ic_chevron_right_black_24dp"/>-->

    </LinearLayout>

    <com.example.admin.flerken.customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MÔ TẢ SẢN PHẨM"
        android:textSize="12sp"
        android:textColor="#c2c4ca"
        android:paddingTop="30.3dp"
        android:paddingBottom="7.3dp"
        android:layout_marginLeft="23dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="21.3dp"
        android:background="@drawable/rectangle_2"
        android:layout_marginTop="7.8dp">

        <com.example.admin.flerken.customfonts.EditText_Roboto_Regular
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ví dụ: Bàn phím này đã mua 2 tháng,..."
            android:layout_marginLeft="9dp"
            android:textSize="14.4sp"
            android:textColorHint="#9b9b9b"
            android:textColor="#000000"
            android:background="#00000000"
            android:inputType="textPersonName"/>

        <!--<ImageView-->
            <!--android:layout_width="22dp"-->
            <!--android:layout_height="22dp"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginRight="5.7dp"-->
            <!--android:src="@drawable/ic_chevron_right_black_24dp"/>-->

    </LinearLayout>

            <com.example.admin.flerken.customfonts.MyTextView_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÌNH TRẠNG"
                android:textSize="12sp"
                android:textColor="#c2c4ca"
                android:paddingTop="30.3dp"
                android:paddingBottom="7.3dp"
                android:layout_marginLeft="23dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="21.3dp"
                android:background="@drawable/rectangle_2"
                android:layout_marginTop="7.8dp">

                <SeekBar
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:progress="3" />


                <!--<ImageView-->
                <!--android:layout_width="22dp"-->
                <!--android:layout_height="22dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginRight="5.7dp"-->
                <!--android:src="@drawable/ic_chevron_right_black_24dp"/>-->

            </LinearLayout>



            <com.example.admin.flerken.customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐỒ VẬT MONG MUỐN"
        android:textSize="12sp"
        android:textColor="#c2c4ca"
        android:paddingTop="28dp"
        android:paddingBottom="7dp"
        android:layout_marginLeft="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20.3dp"
        android:background="@drawable/rectangle_2"
        android:layout_marginTop="7.8dp">

        <com.example.admin.flerken.customfonts.EditText_Roboto_Regular
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tên đồ vật thứ 1"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColorHint="#9b9b9b"
            android:textColor="#000000"
            android:background="@drawable/rectangle_2"/>

        <ImageView
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginRight="5.7dp"
            android:src="@drawable/ic_start"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20.3dp"
        android:background="@drawable/rectangle_2">

        <com.example.admin.flerken.customfonts.EditText_Roboto_Regular
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tên đồ vật thứ 2"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center"
            android:textSize="14.4sp"
            android:textColorHint="#9b9b9b"
            android:textColor="#000000"
            android:background="#00000000"/>
        <ImageView
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginRight="5.7dp"
            android:src="@drawable/ic_start"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20.3dp"
        android:background="@drawable/rectangle_2">

        <com.example.admin.flerken.customfonts.EditText_Roboto_Regular
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tên đồ vật thứ 3"
            android:textSize="14.4sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColorHint="#9b9b9b"
            android:textColor="#000000"
            android:background="@drawable/rectangle_2"/>

        <ImageView
            android:layout_width="63dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginRight="5.7dp"
            android:src="@drawable/ic_start"/>

    </LinearLayout>

    <com.example.admin.flerken.customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HÌNH ẢNH SẢN PHẨM"
        android:textSize="12sp"
        android:textColor="#c2c4ca"
        android:paddingTop="30.3dp"
        android:paddingBottom="7.3dp"
        android:layout_marginLeft="23dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="21.3dp"
        android:background="@drawable/rectangle_2"
        android:layout_marginTop="7.8dp"
        android:layout_gravity="center"
        android:gravity="">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add_image"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add_image"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/add_image"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"/>

    </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/TextViewMessageWrong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:text="Phải điền đầy đủ thông tin"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:visibility="invisible"
        />
    <com.example.admin.flerken.customfonts.Button_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main"
        android:text="THÊM SẢN PHẨM"
        android:textColor="#ffffff"
        android:textSize="14.4sp"
        android:id="@+id/ButtonAddProduct"/>



</LinearLayout>

