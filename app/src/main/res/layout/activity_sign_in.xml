<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.flerken.Login.SignInActivity"
    android:background="@drawable/login_bg2"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/logo"
        android:layout_gravity="center"
        />


    <LinearLayout
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cardbg"
        android:orientation="vertical">



        <TextView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign into your Account"
            android:textSize="22sp"
            android:textColor="#3f4658"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="#3f4658"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:drawableRight="@drawable/ic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3f4658"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="#3f4658"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:drawableRight="@drawable/ic_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget your password?"
            android:textSize="18sp"
            android:textColor="#3f4658"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:background="@drawable/btn_login"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:width="140dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/ButtonLogin"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account? "
            android:textSize="18sp"
            android:textColor="#3f4658"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="18sp"
            android:textColor="#F76B01"/>

    </LinearLayout>

</LinearLayout>
