<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289.9dp"
    android:layout_height="435.8dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:src="@drawable/yeah"
        android:layout_width="165.1dp"
        android:layout_height="165.1dp"
        android:layout_marginTop="46.1dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF000000"/>

    <com.example.admin.flerken.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:textSize="28.8sp"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="21.2dp"/>
    <com.example.admin.flerken.customfonts.MyTextView_Roboto_Regular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giao dịch này đã thực hiện thành công?"
        android:textColor="#111111"
        android:layout_gravity="center"
        android:textSize="12.5sp"
        android:layout_marginTop="11.5sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <com.example.admin.flerken.customfonts.Button_Roboto_Medium
            android:layout_width="140dp"
            android:layout_height="48.3dp"
            android:text="RỒI"
            android:paddingHorizontal="50dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/btnrectangle"
            android:id="@+id/ButtonOkGiveGet"
            android:layout_marginRight="10dp"/>


        <com.example.admin.flerken.customfonts.Button_Roboto_Medium
            android:layout_width="140dp"
            android:layout_height="48.3dp"
            android:text="CHƯA"
            android:paddingHorizontal="50dp"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/btnrectangle2"
            android:id="@+id/ButtonNotGiveGet"/>
    </LinearLayout>



</LinearLayout>