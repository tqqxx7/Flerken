<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image"
                android:layout_width="105dp"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:orientation="vertical"
                android:background="#ffffff">

                <com.example.admin.flerken.customfonts.MyCustomTextView2
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="The Secret Kitchen"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/transfer_icon"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="6dp"/>

                    <com.example.admin.flerken.customfonts.MyCustomTextView2
                        android:id="@+id/text_menu1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundtext"
                        android:paddingBottom="3dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="2dp"
                        android:text="panjabi"
                        android:textColor="@color/main"
                        android:textSize="11dp"
                        android:maxLength="10"/>

                    <com.example.admin.flerken.customfonts.MyCustomTextView2
                        android:id="@+id/text_menu2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundtext"
                        android:paddingBottom="3dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="2dp"
                        android:text="maxican"
                        android:textColor="@color/main"
                        android:textSize="11dp" />

                    <com.example.admin.flerken.customfonts.MyCustomTextView2

                        android:id="@+id/text_menu3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundtext"
                        android:paddingBottom="3dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="9dp"
                        android:paddingTop="2dp"
                        android:text="thai"
                        android:textColor="@color/main"
                        android:textSize="11dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_location"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/shape" />

                        <com.example.admin.flerken.customfonts.MyCustomTextView1
                            android:id="@+id/text_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="MG Road"
                            android:textColor="@color/subtext"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:id="@+id/indicate"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            app:srcCompat="@drawable/free_icon" />
                    </LinearLayout>






                </LinearLayout>


